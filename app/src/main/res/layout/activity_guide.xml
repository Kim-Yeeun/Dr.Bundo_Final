<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuideActivity">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/guide7"
        android:id="@+id/guideimage">

    </ImageView>

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="플라스틱류"
        android:textSize="13dp"
        android:layout_below="@id/guideimage"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/plastic">

    </Button>

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="비닐류"
        android:textSize="13dp"
        android:layout_below="@id/plastic"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/vinyl">

    </Button>

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="스티로폼"
        android:textSize="13dp"
        android:layout_below="@id/vinyl"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/styro">

    </Button>

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="유리병류"
        android:textSize="13dp"
        android:layout_below="@id/styro"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/glass">

    </Button>
    
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="기타 질문/답변"
        android:textSize="15dp"
        android:layout_below="@id/glass"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#aaccaa"
        android:id="@+id/QA">

    </Button>


</RelativeLayout>