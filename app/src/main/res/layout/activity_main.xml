<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:src="@drawable/applogo"
        android:id="@+id/applogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp">

    </ImageView>

    <ImageView
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/applogo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/appcontent"
        android:id="@+id/appcontent">

    </ImageView>

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="분리배출 가이드북"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/appcontent"
        android:layout_marginTop="30dp"
        android:id="@+id/guidebook"
        android:background="@drawable/buttonstyle">

    </Button>

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="바코드 스캔"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/guidebook"
        android:layout_marginTop="15dp"
        android:id="@+id/barcode"
        android:background="@drawable/buttonstyle">

    </Button>

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="분리배출 수준 평가"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/barcode"
        android:layout_marginTop="15dp"
        android:id="@+id/evaluate"
        android:background="@drawable/buttonstyle">

    </Button>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:src="@drawable/logo"
        android:layout_below="@id/evaluate"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="TODO">

    </ImageView>

</RelativeLayout>